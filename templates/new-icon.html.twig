{% extends 'base.html.twig' %}

{% block title %}New Icon{% endblock %}

{% block body %}

    <div>
        {{ form_start(icon_form) }}

            <div class="form-group">
                {{ form_label(icon_form.iconName) }}
                {{ form_widget(icon_form.iconName, {'attr': {'class' : 'form-control'} }) }}
            </div>

            <div class="form-group">
                {{ form_label(icon_form.iconImage) }}
                {{ form_widget(icon_form.iconImage, {'attr': {'class' : 'form-control'} }) }}
            </div>

            <div>
                {{ form_widget(icon_form.save, {'attr': {'class' : 'btn btn-primary'} }) }}
                <a class="btn btn-danger" href="new-produce-item">Cancel Upload</a>
            </div>

        {{ form_end(icon_form) }}
    </div>
{% endblock %}